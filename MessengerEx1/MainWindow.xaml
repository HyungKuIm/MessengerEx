<Window x:Class="MessengerEx1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:MessengerEx1.Views"
        xmlns:vm="clr-namespace:MessengerEx1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:StatusBarViewModel}">
            <views:StatusBarView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel>
                <Button Content="Send Status" Command="{Binding SendStatusCommand}" />
            </StackPanel>
        </Grid>
        <ContentControl Grid.Row="1" Content="{Binding StatusBarVM}" />
    </Grid>
</Window>
